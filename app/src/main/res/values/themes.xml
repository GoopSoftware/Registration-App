<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RegistrationForm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_gray</item>
        <item name="colorOnPrimary">@color/cream</item>

        <item name="colorSecondary">@color/muted_red</item>
        <item name="colorTertiary">@color/lime_green</item>

        <item name="colorSurface">@color/deep_gray_blue</item>
        <item name="colorOnSurface">@color/light_gray</item>

        <item name="colorSurfaceContainer">@color/slate_gray</item>


    </style>

    <style name="TextAppearance.App.DropDownItem" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/cream</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.DropDownItem</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="boxBackgroundColor">@color/deep_gray_blue</item>
        <item name="hintTextColor">@color/lime_green</item>
        <item name="endIconTint">@color/lime_green</item>
    </style>

    <style name="Theme.RegistrationForm" parent="Base.Theme.RegistrationForm" />

</resources>